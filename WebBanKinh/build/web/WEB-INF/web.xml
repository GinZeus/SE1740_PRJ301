    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProductControl</servlet-name>
        <url-pattern>/editproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddInfoControl</servlet-name>
        <url-pattern>/addinfo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
