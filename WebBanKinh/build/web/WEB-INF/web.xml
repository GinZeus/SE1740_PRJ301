<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>homecontroll</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>Controller.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryControl</servlet-name>
        <servlet-class>Controller.CategoryControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShopControl</servlet-name>
        <servlet-class>Controller.ShopControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BrandControl</servlet-name>
        <servlet-class>Controller.BrandControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailControl</servlet-name>
        <servlet-class>Controller.DetailControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchControl</servlet-name>
        <servlet-class>Controller.SearchControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>Controller.LoginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpControl</servlet-name>
        <servlet-class>Controller.SignUpControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageProductControl</servlet-name>
        <servlet-class>Controller.ManageProductControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductControl</servlet-name>
        <servlet-class>Controller.DeleteProductControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductControl</servlet-name>
        <servlet-class>Controller.AddProductControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadProductControl</servlet-name>
        <servlet-class>Controller.LoadProductControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProductControl</servlet-name>
        <servlet-class>Controller.EditProductControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddInfoControl</servlet-name>
        <servlet-class>Controller.AddInfoControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/homecontroll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryControl</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShopControl</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BrandControl</servlet-name>
        <url-pattern>/brand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailControl</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchControl</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpControl</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageProductControl</servlet-name>
        <url-pattern>/manageproduct</url-pattern>
    </servlet-mapping>
